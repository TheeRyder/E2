        if(A[1,string] == Command + "broadcast"){
            timer("say",1000)
	    	hidechat(1)
        }
		
		if(A[1,string] == Command + "printbroadcast"){
			print(Say [randint(1, Say:count()), string]))
			hideChat(1)
		}
    }
    
