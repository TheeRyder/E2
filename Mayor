	if(chatClk(owner())){
   		A = owner():lastSaid():explode(" ")
        if(A[1,string] == Command + "help"){
            commands()
            hideChat(1)
        }
        
        if(A[1,string] == Command + "ld"){
	    	timer("LD",300)
            hideChat(1)
