    interval(500)
    runOnChat(1)
    
    if(first() | duped()){
        setName(owner():name() + "'s Mayor E2" + "\n Made by: Ryder" + "\n Version: 1.0.0")
         
        Say = array(Broadcast1,Broadcast2,Broadcast3,Broadcast4,Broadcast5,Broadcast6,Broadcast7,Broadcast8,Broadcast9,Broadcast10)
        
        if(owner():team():teamName() != "Mayor"){
            print("You have to be Mayor to use this E2.")
            selfDestruct()
        }
        
        function void commands(){
            print("--------------------------Commands--------------------------")
            print(Command + "Help - Print commands")  
            print(Command + "Lockdown - Start's a Lockdown and adverts it")
            print(Command + "Addlaws - Adds your 10 default set laws")
            print(Command + "Broadcast - Madverts your selected Broadcast")
        }
        
        commands()    
    }
    
    if(chatClk(owner())){
        A = owner():lastSaid():explode(" ")
        if(A[1,string] == Command + "help"){
            commands()
            hideChat(1)
        }
        
        if(A[1,string] == Command + "lockdown"){
            timer("Lockdown",300)
            hideChat(1)
        }
        
        if(A[1,string] == Command + "addlaws"){
            timer("AL1",300)
            hideChat(1)
        }
        
        if(A[1,string] == Command + "broadcast"){
            timer("say",1000)
        }
    }
    
        if(clk("Lockdown")){ 
            concmd("say /lockdown")
            timer("LD",1000)
        }
        
        if(clk("LD")){
            concmd("say /madvert There is a lockdown in effect! Be inside within the next 30 seconds or be arrested or killed")
        }
        
        if(clk("Advert")){
            concmd("say /madvert Be sure to read all laws. It is your fault if you don't know them!")
        }
        
        if(clk("say")){
            concmd("say " + Say[randint(1,Say:count()),string])
        }

        if(clk("AL1")){
            concmd("say /addlaw " + Law1)
            timer("AL2",1000)
        }
        
        if(clk("AL2")){
            concmd("say /addlaw " + Law2)
